import axios from 'axios';

const USER_API_BASE_URL = 'http://localhost:8080/authors';

class AuthorApiService {

    fetchAuthors() {
        return axios.get(USER_API_BASE_URL);
    }

    fetchAuthorById(authorId) {
        return axios.get(USER_API_BASE_URL + '/' + authorId);
    }

    deleteAuthor(authorId) {
        return axios.delete(USER_API_BASE_URL + '/' + authorId);
    }

    addAuthor(author) {
        return axios.post(""+USER_API_BASE_URL, author);
    }

    editAuthor(author) {
        return axios.put(USER_API_BASE_URL + '/' + author.id, author);
    }

}

export default new AuthorApiService();